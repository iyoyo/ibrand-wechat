#order-apply .title {
  font-size: 14px;
  color: #888888;
  padding: 12px 21px;
  overflow: visible;
}
#order-apply .content {
  background-color: #ffffff;
  padding: 13px 21px;
  display: flex;
  align-items: center;
}
#order-apply .content .imgContainer {
  position: relative;
  margin-right: 12px;
  width: 57px;
  height: 57px;
  border: 1px solid #cccccc;
  overflow: visible;
}
#order-apply .content .imgContainer image {
  width: 55px;
  height: 55px;
}
#order-apply .content .imgContainer .delete {
  position: absolute;
  width: 14px;
  height: 14px;
  font-size: 12px;
  border-radius: 100%;
  background-color: #6e6e6e;
  color: #FFFFFF;
  line-height: 14px;
  text-align: center;
  right: -6px;
  top: -6px;
}
#order-apply .content picker {
  margin-left: 16px;
  flex: 1;
}
#order-apply .content .append {
  width: 57px;
  height: 57px;
  text-align: center;
  line-height: 57px;
  font-size: 40px;
  color: #cccccc;
  border: 1px solid #cccccc;
  overflow: visible;
}
#order-apply .list {
  background-color: #ffffff;
}
#order-apply .list .list-detail {
  display: flex;
  padding: 15px 21px;
  align-items: center;
  border-bottom: 1px solid #e5e5e5;
}
#order-apply .list .list-detail input {
  flex: 1;
  text-align: right;
}
#order-apply .list .list-detail .num {
  overflow: visible;
  flex: 1;
  display: flex;
  flex-direction: row-reverse;
}
#order-apply .list .list-detail .num view {
  overflow: visible;
  width: 38px;
  height: 38px;
  text-align: center;
  line-height: 38px;
  border: 1px solid #e7e7e7;
}
#order-apply .list .list-detail .right {
  flex: 1;
  text-align: right;
}
#order-apply .text-area {
  padding: 10px;
  display: flex;
  background-color: #ffffff;
}
#order-apply .text-area textarea {
  flex: 1;
}
#order-apply .submit {
  margin-top: 16px;
}
#order-apply .submit button {
  margin: 0 20px;
}
