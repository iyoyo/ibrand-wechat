#address-add .address-info {
  background: #FFFFFF;
}
#address-add .address-info .info-item {
  height: 40px;
  line-height: 40px;
  padding-left: 15px;
  display: flex;
  align-items: center;
  color: #000000;
  font-size: 16px;
}
#address-add .address-info .info-item label {
  width: 80px;
  display: block;
}
#address-add .address-info .info-item .form-control {
  flex: 1;
  padding: 0 30px 0 10px;
}
#address-add .address-info .info-item .form-control input {
  width: 100%;
  font-size: 16px;
  box-sizing: border-box;
  outline: 0;
  border: none;
  height: 24px;
  line-height: 24px;
}
#address-add .address-info .info-item .form-control.select {
  background-image: url("https://uto.ibrand.cc/m/static/img/ic_forward.png");
  background-repeat: no-repeat;
  background-position: 100%;
  background-size: 20px;
}
#address-add .address-info .info-item .form-control.select picker {
  height: 100%;
}
#address-add .address-info .info-item .form-control.select picker .picker {
  height: 40px;
}
#address-add .address-info .info-item .checkbox {
  width: 100%;
  display: flex;
  align-items: center;
}
#address-add .button-box {
  margin-top: 30px;
}
#address-add .button-box button {
  margin: 0 20px 15px 20px;
}
