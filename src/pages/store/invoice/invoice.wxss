#store-invoice .invoice-info .title {
  height: 35px;
  line-height: 35px;
  color: #888;
  padding: 0 20px;
  font-size: 14px;
}
#store-invoice .invoice-info .type {
  background: #FFFFFF;
}
#store-invoice .invoice-info .type radio-group {
  display: flex;
  align-items: center;
  padding: 10px 0;
}
#store-invoice .invoice-info .type radio-group .type-item {
  flex: 1;
  width: 0%;
  padding-left: 20px;
}
#store-invoice .invoice-info .type radio-group .type-item .checkbox {
  display: flex;
  align-items: center;
}
#store-invoice .invoice-info .type radio-group .type-item .checkbox radio {
  margin-right: 5px;
}
#store-invoice .invoice-info .type .name-info {
  display: flex;
  align-items: center;
  padding: 10px 20px 10px 20px;
}
#store-invoice .invoice-info .type .name-info label {
  width: 80px;
}
#store-invoice .invoice-info .type .name-info input {
  width: 100%;
}
#store-invoice .tips {
  font-size: 14px;
  padding: 10px 20px;
  color: #959595;
}
#store-invoice .tips .title {
  display: block;
}
#store-invoice button {
  position: fixed;
  left: 20px;
  right: 30px;
  bottom: 30px;
}
