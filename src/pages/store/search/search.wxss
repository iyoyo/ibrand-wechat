#store-search .search-box {
  position: fixed;
  top: 0;
  width: 100%;
  padding: 8px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #EFEFF4;
  z-index: 5;
}
#store-search .search-box .input-box {
  position: relative;
  border: 1px solid #e6e6ea;
  border-radius: 5px;
  flex: 1;
}
#store-search .search-box .input-box input {
  width: 100%;
  height: 30px;
  border-radius: 5px;
  background: #FFFFFF;
  padding: 0 35px;
  box-sizing: border-box;
}
#store-search .search-box .input-box .search {
  position: absolute;
  top: 5px;
  left: 8px;
  z-index: 5;
}
#store-search .search-box .input-box .clear {
  position: absolute;
  top: 5px;
  right: 8px;
  z-index: 5;
}
#store-search .search-box .text {
  width: 50px;
  text-align: center;
  color: #00c203;
}
#store-search .goods-list {
  font-size: 0;
  box-sizing: border-box;
  padding: 40px 5px 20px 5px;
}
#store-search .goods-list .commodity-out {
  width: 50%;
  display: inline-block;
  font-size: 12px;
  padding: 10px 5px 0 5px;
  box-sizing: border-box;
}
#store-search .goods-list .commodity-out .commodity-box {
  background: #ffffff;
  overflow: hidden;
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
  font-size: 14px;
}
#store-search .goods-list .commodity-out .commodity-box .commodity-img {
  overflow: hidden;
}
#store-search .goods-list .commodity-out .commodity-box .commodity-img image {
  width: 290rpx;
}
#store-search .goods-list .commodity-out .commodity-box .commodity-name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
#store-search .goods-list .commodity-out .commodity-box .commodity-money {
  color: #e42b1e;
}
