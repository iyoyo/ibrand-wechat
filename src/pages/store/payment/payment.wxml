<view id="store-payment">
    <view class="order-item" wx:if="{{order.status === 1}}">
        <view class="title">
            商品清单
        </view>
        <view class="goods info mx-1px-bottom"  wx:for="{{order.items}}">
            <view class="goods-item">
                <view class="item-left">
                    <image  src="{{item.item_meta.image}}" />
                </view>
                <view class="item-right">
                    <view class="goods-name item">
                        <view class="name">
                           {{item.item_name}}
                        </view>
                        <view>
                            {{item.quantity}}件
                        </view>
                    </view>
                    <view class="goods-money item">
                        <view>
                            {{item.item_meta.specs_text}}
                        </view>
                        <view>
                            ￥{{item.total / 100}}
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>

    <view class="order-item">
        <view class="title">
            支付方式
        </view>
        <view class="type info">
            <label class="radio">
                <radio checked="true" />
                <text>微信支付</text>
            </label>
        </view>
    </view>
    <view class="order-item">
        <view class="title">
            支付金额
        </view>
        <view class="money info">
            ￥{{order.total / 100}}
        </view>
    </view>

    <button type="primary" bindtap="jump">立即支付</button>
</view>