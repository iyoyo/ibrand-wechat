#coupon-index .coupon-box {
  padding: 12px;
}
#coupon-index .coupon-box .convert-box {
  display: flex;
  padding-bottom: 10px;
}
#coupon-index .coupon-box .convert-box input {
  flex: 1;
  display: block;
  width: 100%;
  height: 44px;
  line-height: normal;
  font-size: 16px;
  background: #e3e3e3;
  padding-left: 17px;
}
#coupon-index .coupon-box .convert-box .button {
  width: 90px;
  height: 44px;
  line-height: 44px;
  background: #ff0000;
  text-align: center;
  font-size: 18px;
  color: #ffffff;
  margin-left: 20px;
}
#coupon-index .coupon-box .coupon-list .coupon-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}
#coupon-index .coupon-box .coupon-list .coupon-item .left {
  width: 110px;
  height: 110px;
  background: url("http://ovef29y3v.bkt.clouddn.com/coupon-bg.png") no-repeat;
  background-size: 100% 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
#coupon-index .coupon-box .coupon-list .coupon-item .left.off {
  background: url("http://ovef29y3v.bkt.clouddn.com/off-coupon-bg.png") no-repeat;
  background-size: 100% 100%;
}
#coupon-index .coupon-box .coupon-list .coupon-item .left .label {
  color: #FFFFFF;
  padding: 0 10px;
}
#coupon-index .coupon-box .coupon-list .coupon-item .right {
  position: relative;
  height: 110px;
  flex: 1;
  overflow: hidden;
  background: #FFFFFF;
  padding: 0 10px;
  font-size: 14px;
}
#coupon-index .coupon-box .coupon-list .coupon-item .right .coupon-name {
  display: flex;
  align-items: center;
  margin: 10px 0;
}
#coupon-index .coupon-box .coupon-list .coupon-item .right .coupon-name .type {
  color: #FFFFFF;
  background: #fc5e3a;
  border-radius: 10px;
  padding: 1px 8px;
  margin-right: 5px;
}
#coupon-index .coupon-box .coupon-list .coupon-item .right .coupon-name .type.off-type {
  background: #1aad19;
}
#coupon-index .coupon-box .coupon-list .coupon-item .right .coupon-name .name {
  flex: 1;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
#coupon-index .coupon-box .coupon-list .coupon-item .right .coupon-tiem {
  font-size: 12px;
  color: #b5b5b5;
}
#coupon-index .coupon-box .coupon-list .loadingbox {
  margin-top: 10px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 14px;
}
#coupon-index .coupon-box .examine {
  width: 100%;
  height: 44px;
  line-height: 44px;
  text-align: center;
  font-size: 18px;
  background: #FFFFFF;
  color: #848484;
}
